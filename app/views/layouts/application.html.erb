<!DOCTYPE html>
<html>
<head>
  <title>Mynote</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-inverse" role="navigation">
    <a href="#" class="navbar-brand">Mynote</a>
     <ul class="nav nav-tabs" role="tablist">
       <li><%= link_to 'All Notes', notes_path %></li>
       <% if user_signed_in? %>
	    <li class="nav navbar-right"><%= link_to current_user.first_name, edit_user_registration_path %></li>
	    <li class="nav navbar-right"><%= link_to "Log out", destroy_user_session_path, method:   :delete %>
	    <% else %>
	    <li class="nav navbar-right"> <%= link_to "Register", new_user_registration_path %>
	    <li class="nav navbar-right"><%= link_to "Log in",  new_user_session_path %></li>
        <% end %>
        
    </ul>
     </nav>
     
   
	 
<div class="container">
      <% flash.each do |type, message| %>
          <div class="alert <%= flash_class type %>">
             <button class="close" data-dismiss="alert"></button>
          <%= message %>
          </div>
    <% end %>

    <%= yield %>
  </div>

</body>
</html>
