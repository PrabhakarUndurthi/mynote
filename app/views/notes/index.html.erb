<div class="page-header">
  <h1>All the Shared Notes</h1>
</div>

<%= link_to "Share New Note",  new_note_path, class: "btn btn-success" %>

<% @notes.each do |note| %>
<div class="note">
    <strong><%= note.name %></strong>
    <p><b>Subject: </b><%= note.subject %></p>
    <p><b>Note: </b><%= note.content %></p>
    <div class="meta">
      <%= link_to "Show", note %>
      <span class="admin">
        <%= link_to "Edit", edit_note_path(note) %> | 
        <%= link_to "Delete", note, method: :delete, data: { confirm: "Are you sure you want to delete this note?"} %>
      </span>
    </div>
   </div>
  <% end %>